<h2>劇場投稿</h2>
<%= form_with model:[:admin,@theater], method: :post, local:true do |f| %>

<%= f.label :"劇場名" %>
<%= f.text_field :name %>

<%= f.label :"説明" %>
<%= f.text_field :introduction %>

<%= f.label :"都道府県" %>
<%= f.select :prefecture, Theater.prefectures.keys, {} %>

<%= f.label :"住所" %>
<%= f.text_field :address %>

<%= f.label :"アクセス" %>
<%= f.text_field :access %>

<%= f.label :"駐車場" %>
<%= f.text_field :parking %>

<%= f.label :"電話番号" %>
<%= f.text_field :phone_number %>

<%= f.label :"ホームページ" %>
<%= f.text_field :url %>

<%= f.label :"施設写真" %>
<%= f.attachment_field :image %>

<%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>

<% end %>