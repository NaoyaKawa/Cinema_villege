<div class="container container-m">
 <div class="card w-200 mx-auto mt-4 shadow-lg">
  <div class="card-body">
   <div class="row">
    <div class="col-12">
     <h2 class="card-title">記事の編集</h2>
      <table class="table">
       <tbody>
        <%= form_with model:[:admin,@magazine], local:true do |f| %>
         <tr>
          <th scope="col-2">氏名</th>
          <td>
           <%= f.text_field :title, autofocus: true %>
          </td>
         </tr>
         <tr>
          <th scope="col-2">内容</th>
          <td><%= f.text_field :content, autofocus: true %></td>
         </tr>
         <tr>
          <th scope="col-2">画像</th>
          <td><%= f.attachment_field :image %></td>
         </tr>
         <tr>
          <td>
           <%= f.submit "編集内容を保存",class: "btn btn-success" %>
          </td>
         </tr>
        <% end %>
       </tbody>
      </table>
    </div>
   </div>
  </div>
 </div>
</div>