        <li><%= link_to "劇場一覧", admin_theaters_path, class: "btn btn-outline-primary" %></li>
        <li><%= link_to "マガジン", admin_magazines_path, class: "btn btn-outline-primary" %></li>
        <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-primary" %></li>
      <% else %>
        <li>ゲストユーザー</li>
        <li><%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-primary" %></li>
        <li><%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-primary" %></li>
      <% end %>

    </ul>

  </div>
  </nav>
</header>